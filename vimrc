set nocompatible
set ruler
syntax on

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set smartindent

filetype plugin on
set omnifunc=syntaxcomplete#Complete

set mouse=a
set backspace=2

set undodir=~/.vim/undo//
set backupdir=~/.vim/backup//
set directory=~/.vim/swp//
